<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScoreButton"
        parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="PlusButton"
        parent="ScoreButton">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:contentDescription">Plus Button</item>
    </style>
    <style name="MinusButton"
        parent="ScoreButton">
        <item name="android:src">@drawable/ic_minus</item>
        <item name="android:contentDescription">Minus Button</item>
    </style>
    <style name="ScoreText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

</resources>